    <designationCategory>Ship</designationCategory>
    <killedLeavings>
      <ChunkSlagSteel>8</ChunkSlagSteel>
    </killedLeavings>
    <comps />
  </ThingDef>

  <ThingDef ParentName="ShipBase">
    <defName>SRTSSuperpod</defName>
    <label>Superpod</label>
    <description>A complete transport system made to fly passengers and cargo across the world.

Passenger capacity: 1
Military: No
----------------------------
Speed: Awful
Fuel capacity: 200L
Fuel efficiency: Normal
----------------------------
Cargo capacity: 240kg
Internal power plant: 600w</description>
    <graphicData>
      <texPath>Superpod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <drawRotated>false</drawRotated>
    </graphicData>
    <size>(2,2)</size>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>2400</WorkToBuild>
      <Flammability>0.4</Flammability>
      <Mass>20</Mass>
      <Beauty>15</Beauty>
    </statBases>
    <costList>
